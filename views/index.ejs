<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Artist Directory</title>
    <meta name="description" content="Artist Directory">
    <meta name="author" content="Hao Tang">

    <link rel="stylesheet" href="/css/styles.css">
    <script src="/js/script.js" defer></script>
</head>

<body>
    <div class="search-area">
        <h1>Artist Directory</h1>
        <input id="search-input" type="text">
        <button class="btn search-btn" onclick="searchArtist()">Search</button>
        <button class="btn" onclick="toggleForm()">Add</button>
    </div>
    <div class="form-area">
        <form id="add-artist-form">
            <input id="artist-name" class="artist-info" type="text" maxlength="40" placeholder="Artist Name">
            <input id="artist-desc" class="artist-info" type="text" maxlength="40" placeholder="About artist">
            <input id="artist-img" class="artist-info" type="url" placeholder="Image url">
            <input id="add-artist-btn" class="btn" type="button" value="Add" onclick="addArtist()">
        </form>
    </div>
    <div class="list-area">
        <ul id="artist-list">
            <% artists.forEach(function(artist) { %>
                <li>
                    <div class="artist-card">
                        <img src=<%= artist.imgUrl %>>
                        <button class="btn">Delete</button>
                        <h3><%= artist.name %></h3>
                        <p><%= artist.desc %></p>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>